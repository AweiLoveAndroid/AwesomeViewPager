<resources>

    <!--以下三个style是 Flowlayout默认的三个style-->

    <style name="Flowlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tag_textColor">@color/base_color_8</item>
        <item name="tag_backgroundColor">@color/base_color_6</item>
        <!--<item name="tag_inputHintColor">@color/base_color_10</item>
        <item name="tag_inputTextColor">@color/base_color_9</item>-->
        <item name="tag_checkedTextColor">@color/base_color_6</item>
        <item name="tag_checkedBackgroundColor">@color/base_color_8</item>
        <item name="tag_pressedBackgroundColor">@color/base_color_7</item>
        <item name="tag_textSize">15sp</item>
        <item name="tag_horizontalSpacing">5dp</item>
        <item name="tag_verticalSpacing">5dp</item>
        <item name="tag_radius">5dp</item>
        <item name="tag_strokeColor">@drawable/selector_flowlayout_gray_white</item>
        <item name="tag_checkedStrokeColor">@color/base_color_8</item>
        <item name="tag_strokeWidth">1px</item>
        <item name="tag_multiChooseable">true</item>
        <item name="tag_singleLine">true</item>
        <item name="tag_horizontalPadding">8dp</item>
        <item name="tag_verticalPadding">8dp</item>
        <item name="tag_width">wrap_content</item>
        <item name="tag_height">wrap_content</item>
    </style>

    <style name="Flowlayout.Beauty_Red1" parent="Flowlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="tag_textColor">@color/base_color_0</item>
        <item name="tag_backgroundColor">@color/base_color_6</item>
        <item name="tag_checkedTextColor">@color/base_color_6</item>
        <item name="tag_checkedBackgroundColor">@color/base_color_0</item>
        <item name="tag_pressedBackgroundColor">@color/base_color_7</item>
        <item name="tag_radius">5dp</item>
        <item name="tag_strokeColor">@drawable/selector_flowlayout_gray_white</item>
        <item name="tag_checkedStrokeColor">@color/base_color_0</item>
        <item name="tag_strokeWidth">1px</item>
        <!--这里设置固定大小,padding为0-->
        <item name="tag_horizontalPadding">8dp</item>
        <item name="tag_verticalPadding">8dp</item>
        <!--单位dp-->
        <item name="tag_width">wrap_content</item>
        <item name="tag_height">wrap_content</item>
        <!--限制tag显示长度,规则查看Textview-->
        <!--<item name="tag_maxEms">5</item>-->
        <!--单选-->
        <item name="tag_multiChooseable">false</item>
    </style>

    <style name="Flowlayout.Beauty_Red2" parent="Flowlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="tag_textColor">@color/base_color_2</item>
        <item name="tag_backgroundColor">@color/base_color_6</item>
        <item name="tag_checkedTextColor">@color/base_color_6</item>
        <item name="tag_checkedBackgroundColor">@color/base_color_0</item>
        <item name="tag_pressedBackgroundColor">@color/base_color_7</item>
        <item name="tag_radius">5dp</item>
        <item name="tag_strokeColor">@drawable/selector_flowlayout_gray_white</item>
        <item name="tag_checkedStrokeColor">@color/base_color_0</item>
        <item name="tag_strokeWidth">1px</item>
        <!--这里设置固定大小,padding为0-->
        <item name="tag_horizontalPadding">8dp</item>
        <item name="tag_verticalPadding">8dp</item>
        <!--这里设置wrap_content时候tag_maxEms不会起作用的-->
        <item name="tag_maxEms">-1</item>
        <item name="tag_width">wrap_content</item>
        <item name="tag_height">wrap_content</item>

    </style>

    <style name="Style_FlowLayout_Demo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="tag_backgroundColor">@color/base_color_6</item>
        <item name="tag_pressedBackgroundColor">@color/base_color_7</item>
        <item name="tag_checkedBackgroundColor">@color/orange_light</item>
        <item name="tag_textColor">@color/orange_light</item>
        <item name="tag_checkedTextColor">@color/base_color_6</item>
        <item name="android:textSize">17sp</item>
        <item name="tag_horizontalPadding">15dp</item>
        <item name="tag_verticalPadding">5dp</item>
        <item name="tag_horizontalSpacing">10dp</item>
        <item name="tag_verticalSpacing">5dp</item>
        <item name="tag_radius">5dp</item>
        <item name="tag_strokeColor">@color/oragne_dark</item>
        <item name="tag_checkedStrokeColor">@color/white</item>
        <item name="tag_strokeWidth">3px</item>
        <!--单选-->
        <item name="tag_singleLine">true</item>
        <item name="tag_multiChooseable">false</item>
        <item name="tag_maxEms">-1</item>
        <item name="tag_width">wrap_content</item>
        <item name="tag_height">wrap_content</item>
    </style>

</resources>
